{
  "manifest_version": 3,
  "name": "Exam Time Reminder",
  "version": "1.0",
  "description": "Displays a reminder popup at 9:45 AM on exam day",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "alarms"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 